@model EHSInventory.Models.DeleteConfirmationView

<head>
    <link rel="stylesheet" href="~/css/actions.css">
</head>
<body>
    <main>
        <div class="wrapper">
            <h1>Delete @Model.Name?</h1>
            <p>Are you sure you want to delete product @Model.Name?</p>
            <form asp-action="Delete">
                <div class="field">
                    <label for="comment">Comment</label><br/>
                    <textarea name="comment" id="comment" placeholder="Comment"></textarea>
                </div>
                <div class="buttons">
                    <input type="submit" value="Delete" class="submit">
                    <a class="cancel" href="/Categories/Index.cshtml">Cancel</a>
                </div>
            </form>
        </div>
    </main>
</body>